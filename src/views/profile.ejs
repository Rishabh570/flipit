<!DOCTYPE html>
<html lang="en">
<head>
	<title>Profile</title>
	<%- include ('./partials/head.ejs') %> 
	<link rel="stylesheet" href="/css/profile.css">
</head>
<body>

	<header>
		<%- include ('./partials/header.ejs', {user}) %> 
	</header>

	<main>
		<section class="container-fluid my-3">
			<img class="d-block mx-auto" id="avatar" src="/images/avatar.svg" alt width="128" height="128">
			<h1 class="display-4 my-2 text-center"><%= user.name %> </h1>

			<!-- H-LINE -->
			<hr class="hor-line">

			<!-- PROFILE FORM STARTS -->
			<p class="lead w-50 mx-auto">Edit details</p>
			<form autocomplete="off" class="form w-50 mx-auto" role="form" method="POST" action="/v1/profile">
				<div class="form-group">
					<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="name" value=<%= user.name %>>
				</div>
				<div class="form-group">
					<input class="form-control" type="email" name="email" value=<%= user.email %> disabled>
				</div>
				<button class="btn btn-success btn-sm" type="submit">Save</button>
			</form>
			<!-- PROFILE FORM ENDS -->

			<!-- H-LINE -->
			<hr class="hor-line">

			<!-- SOCIAL ACCOUNTS STARTS -->
			<div class="social-accounts w-50 mx-auto my-4">
				<p class="lead">Connect social accounts</p>
				<% if (!user.facebook.profileId) { %>
					<a class="btn" href="/v1/auth/connect/facebook"> <img src="/images/facebook.svg" alt width="32" height="32"> </a>
				<% } %>
				<% if (!user.google.profileId) { %>
					<a class="btn" href="/v1/auth/connect/google"> <img src="/images/google.svg" alt width="32" height="32"> </a>
				<% } %>
			</div>
			<!-- SOCIAL ACCOUNTS ENDS -->
		</section>
	</main>

	<footer>
		<%- include ('./partials/footer.ejs') %> 
	</footer>
	
</body>
</html>
