<!DOCTYPE html>
<html lang="en">
<head>
	<title>Change Password</title>
	<%- include ('./partials/head.ejs') %> 
</head>
<body>
	
	<header>
		<%- include ('./partials/header.ejs') %> 
	</header>

	<main>

		<!-- SHOWS NOTIFICATION -->
		<% if (messages.notification) { %>
			<script>
				Toastify({
					text: '<%= messages.notification %>',
					backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
					className: "info",
				}).showToast();
			</script>
		<% } %>
		<!-- SHOWS NOTIFICATION ENDS -->
	
		<!-- JUMBOTRON STARTS -->
		<div class="jumbotron jumbotron-fluid" id="banner">
			<div class="container text-center">
				<h1 class="display-5">Go ahead and change your local password ðŸ”‘</h1>
			</div>
		</div>
		<!-- JUMBOTRON ENDS -->

		<!-- CHANGE PASSWORD STARTS -->
		<section class="container-fluid w-50 my-3">
			<form name="change-password" method="POST" action="/auth/password/change" autocomplete="off" class="form" role="form">
				<div class="form-group">
					<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
				</div>
				<div class="form-group">
					<label for="inputPassword1">Current password</label> 
					<input type="password" class="form-control" name="currentPassword" id="inputPassword1" required></<input>
				</div>
				<div class="form-group">
					<label for="inputNewPassword2">New password</label>
					<input type="password" class="form-control" name="newPassword" id="inputNewPassword2" required>
				</div>
				<div class="form-group">
					<label for="inputConfirmPassword3">Confirm new password</label>
					<input type="password" class="form-control" name="confirmNewPassword" id="inputConfirmPassword3" required>
				</div>
				<div class="form-group">
					<button class="btn btn-danger" type="submit">Submit</button>
				</div>
			</form>
		</section>
		<!-- CHANGE PASSWORD ENDS -->

	</main>

	<footer>
		<%- include ('./partials/footer.ejs') %> 
	</footer>
</body>
</html>
