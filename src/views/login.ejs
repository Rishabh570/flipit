<!DOCTYPE html>
<html lang="en">
<head>
	<title>Sign in | Flipit</title>
	<%- include ('./partials/head.ejs') %> 
	<link rel="stylesheet" href="/css/login.css">
</head>
<body>
	
	<header>
		<%- include ('./partials/header.ejs', {user: undefined}) %> 
	</header>
	
	<main>
		<!-- Shows notification -->
		<% if (messages.notification) { %>
			<script>
				Toastify({
					text: '<%= messages.notification %>',
					backgroundColor: "linear-gradient(to right, #00b09b, #96c93d)",
					className: "info",
				}).showToast();
			</script>
		<% } %>
		
		<section class="container-fluid my-4 w-50 h-50">

			<div class="card card-outline-secondary">
				<div class="card-header text-center">
					<h3 class="mb-0">Sign In</h3>
				</div>

				<div class="card-body">
					<form autocomplete="off" class="form" role="form" method="POST" action="/auth/login">
						<div class="form-group">
							<input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
						</div>
						<div class="form-group">
							<label for="inputEmail3">Email</label> 
							<input name="email" class="form-control" id="inputEmail3" placeholder="Email" required type="email">
						</div>
						<div class="form-group">
							<div class="password-input">
								<label for="inputPassword3">Password</label> 
								<small class="align-right"><a href="/auth/password/forgot"><strong>Forgot password?</strong></a></small>
							</div>
							<input name="password" class="form-control" id="inputPassword3" placeholder="Password" required type="password"> 
						</div>
						<div class="form-group">
							<button class="btn btn-danger btn-lg" type="submit">Sign In</button>
						</div>
					</form>
					<div class="text-center">
						<small class="mt-3">OR</small>
					</div>

					<div id="social-signup my-3 text-center">
						<a href="/auth/google">Sign In with Google</a>
						<br>
						<a href="/auth/facebook">Sign In with Facebook</a>
					</div>

				</div>
			</div>
			<div class="text-center">
				<small>Don't have an account? <a href="/auth/register"> <strong>Sign up</strong></a></small>
			</div>
			<!-- register -->
		</section>
	</main>
	
	<footer>
		<% include ('./partials/footer.ejs') %> 
	</footer>
	
	</body>
</html>
	